<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.admin.testappswitch.MainActivity">

    <EditText
        android:id="@+id/inputTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sendButtonId"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/sendButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="sendMessage"
        android:text="@string/SendButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="@+id/inputTextId"
        app:layout_constraintRight_toRightOf="@+id/inputTextId" />
</android.support.constraint.ConstraintLayout>
